<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Carl Stephens</Authors>
    <Description>Simplifies running console executables</Description>
    <PackageTags>console,wrapper,executable,redirection</PackageTags>
    <NeutralLanguage>en</NeutralLanguage>
    <PackageId>carlst99.ConsoleWrapper</PackageId>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <Version>1.0.1</Version>
    <PackageLicenseUrl></PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/carlst99/ConsoleWrapper</PackageProjectUrl>
    <RepositoryUrl>https://github.com/carlst99/ConsoleWrapper</RepositoryUrl>
    <RepositoryType />
    <Copyright>Carl Stephens Â© 2020</Copyright>
    <Company />
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReleaseNotes>Major API redesign, bugfixes</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="ConsoleWrapper.nuspec" />
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
